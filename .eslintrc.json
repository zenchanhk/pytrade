{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
  },
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": "eslint:recommended",
  "plugins": ["html"],
  "rules": {
      "indent": ["warn", 4, {
          "SwitchCase": 1
      }],
      "quotes": ["warn", "single"],
      "semi": ["warn", "always"],
      "no-console": "off",
      "no-unused-vars": [
        "warn",
        {
            "varsIgnorePattern": "Icon"
        }
      ]
  }
}
